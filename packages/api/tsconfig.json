{
  "extends": "@mpnpm/tsconfig",
  "exclude": ["dist"],
  "include": ["src"],
  "compilerOptions": {
    "incremental": false,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "bar/*": ["src/bar/*"],
      "foo/*": ["src/foo/*"]
    }
  }
}
