{
  "extends": "@mpnpm/tsconfig",
  "exclude": ["node_modules", "dist", "src/styles"],
  "include": ["src"],
  "compilerOptions": {
    "outDir": "public",
    "declaration": false,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "components/*": ["src/components/*"],
      "styles/*": ["src/styles/*"]
    }
  }
}
